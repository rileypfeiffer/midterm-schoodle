<!DOCTYPE html>
<html lang="en">

<head>
  <title>Schoodle: Invitation</title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/invitation.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Comfortaa&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Disable Viewport Zooming-->
  <meta name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0' />
</head>

<body>
<%- include('partials/_header') %>
<section id="event">
  <div id="event-title-organizer">
  <h2><%= data.title ></h2>
  <h4>Created By: Example Organizer</h4>
  </div>
  <section id="invitation-content">
  <div id="left-column-content">
    <div class="event-info">
    <i class="far fa-compass icon"></i>
    <p><%= data.location ></p>
    </div>
    <div class="event-info">
    <i class="fas fa-calendar-week icon"></i>
    <p><%= data.date ></p>
    </div>
    <div id="timeslots">
      <div class="event-info">
      <i class="far fa-clock icon"></i>
      <p>Timeslots</p>
      </div>
    <div id="times">
      <div class="time">
      <input type="checkbox" id="time-slot-1" name="time-slot-1">
      <label class="time-label" for="time-slot-1"><%= data.timeslot1 ></label>
      </div>
      <div class="time">
      <input type="checkbox" id="time-slot-2" name="time-slot-2">
      <label class="time-label" for="time-slot-2"><%= data.timeslot2 ></label>
      </div>
      <div class="time">
      <input type="checkbox" id="time-slot-3" name="time-slot-3">
      <label class="time-label" for="time-slot-3"><%= data.timeslot3 ></label>
      </div>
    </div>
    </div>
  </div>
  <div id="description-respondees">
    <label for="description"><b>Description:</b></label>
    <p><%= data.description ></p>
    <!-- respondees -->
    <label for="respondee-list"><b>Respondees:</b></label>
    <ul>
      <li>Sally Salmon (ssalmon@yahoo.com): <i class="fas fa-check attending"></i></li>
      <li>John Doe (bdoe@gmail.com): <i class="fas fa-check attending"></i></li>
      <li>Denis Rodman (drodman@yahoo.com): <i class="fas fa-times not-attending"></i></li>
    </ul>
  </section>
    <div id="decline-confirm">
      <form class="form-inline" action="/respondees" method="POST">
        <label for="name">Name: </label>
        <input type="text" name="name">
        <label for="email">Email: </label>
        <input type="email" name="email">
        <button type="submit" class="decline-confirm">Decline</button>
        <button type="submit" class="decline-confirm">Confirm</button>
      </form>
    </div>
  </div>
</section>
</body>
</html>
